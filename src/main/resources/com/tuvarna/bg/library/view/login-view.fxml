<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tuvarna.bg.library.controllers.LoginController">

    <!-- Transparent background layers (non-clickable) -->
    <VBox mouseTransparent="true" style="-fx-background-color: rgba(255, 255, 255, 0.05);" styleClass="background-pattern">
        <HBox alignment="TOP_RIGHT" mouseTransparent="false" styleClass="window-controls">
            <Button fx:id="minimizeButton" styleClass="minimize-button" text="âˆ’" />
            <Button fx:id="closeButton" styleClass="close-button" text="Ã—" />
        </HBox>
    </VBox>

    <VBox alignment="CENTER" maxHeight="500" maxWidth="400" spacing="20" styleClass="login-container">
        <VBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 48px;" text="ðŸ“š" />
            <Label styleClass="login-title" text="Library Management System" />
            <Label styleClass="login-subtitle" text="Sign in to your account" />
        </VBox>

        <VBox maxWidth="300" spacing="15">
            <VBox spacing="5">
                <Label styleClass="form-label" text="Username" />
                <TextField fx:id="usernameField" promptText="Enter your username" styleClass="text-field" />
            </VBox>

            <VBox spacing="5">
                <Label styleClass="form-label" text="Password" />
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="text-field" HBox.hgrow="ALWAYS" />
                </HBox>
            </VBox>

            <Button fx:id="loginButton" defaultButton="true" onAction="#handleLogin" styleClass="button" text="Sign In" />

            <Label fx:id="errorLabel" alignment="CENTER" style="-fx-text-fill: #dc3545; -fx-font-size: 12px;" text="" visible="false" />
        </VBox>

    </VBox>

    <VBox alignment="BOTTOM_LEFT" mouseTransparent="true" style="-fx-translate-x: -50; -fx-translate-y: -50;">
        <Label style="-fx-text-fill: rgba(255, 255, 255, 0.1); -fx-font-size: 200;" text="â—" />
    </VBox>

    <VBox alignment="TOP_RIGHT" mouseTransparent="true" style="-fx-translate-x: 50; -fx-translate-y: 50;">
        <Label style="-fx-text-fill: rgba(255, 255, 255, 0.1); -fx-font-size: 150;" text="â—" />
    </VBox>

</StackPane>
